<Window x:Class="ToDoList.AddTaskWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ToDoList"
        mc:Ignorable="d"
        Title="AddTaskWindow" Height="450" Width="800">
    <Grid Margin="5">
        <Label Content="Название задачи:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="353,48,0,0" />
        <TextBox Name="taskNameTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Margin="305,85,0,0" />
        <Label Content="Статус задачи:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="364,112,0,0" Width="84" />
        <ComboBox Name="taskStatusComboBox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="175" Margin="313,145,0,0" Height="27">
            <ComboBoxItem>выполнено</ComboBoxItem>
            <ComboBoxItem>не выполнено</ComboBoxItem>
        </ComboBox>
        <Button Content="Добавить" Click="Add_Click" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,345,118" />
    </Grid>
</Window>
